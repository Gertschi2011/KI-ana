server {
    listen 80;
    listen [::]:80;
    server_name app.ki-ana.at;

    # ACME HTTP-01
    location ^~ /.well-known/acme-challenge/ {
        root /var/www/certbot;
        default_type "text/plain";
    }

    # alles andere auf HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS: App + API Proxy + SSE
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name app.ki-ana.at;

    # Let’s Encrypt (Produktions-Zertifikat bereits vorhanden)
    ssl_certificate     /etc/letsencrypt/live/app.ki-ana.at/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/app.ki-ana.at/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # ACME auch über HTTPS erreichbar (nicht zwingend, aber ok)
    location ^~ /.well-known/acme-challenge/ {
        root /var/www/certbot;
        default_type "text/plain";
    }

    # API → Backend (Same-Origin für Cookies)
    location /api/ {
        proxy_pass http://backend:8000;  # Docker-Servicename
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;
        proxy_buffering off;

        proxy_set_header Host               $host;
        proxy_set_header X-Real-IP          $remote_addr;
        proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto  $scheme;
        proxy_set_header X-Forwarded-Host   $host;
    }

    # SSE Events → Backend
    location /events {
        proxy_pass http://backend:8000;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_buffering off;
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;

        proxy_set_header Host               $host;
        proxy_set_header X-Real-IP          $remote_addr;
        proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto  $scheme;
    }

    # Health passt durch (optional)
    location = /health {
        proxy_pass http://backend:8000/health;
        proxy_set_header Host $host;
    }

    # Alles andere → Next.js Frontend
    location / {
        proxy_pass http://frontend:3000;   # Docker-Servicename
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_set_header Host               $host;
        proxy_set_header X-Real-IP          $remote_addr;
        proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto  $scheme;
        proxy_set_header X-Forwarded-Host   $host;

        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;
    }
}
