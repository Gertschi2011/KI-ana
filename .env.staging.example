# --- STAGING ENV (template) ---
ENV=staging

# Host-level base URL (final, with Host-Nginx + TLS)
KIANA_BASE_URL=https://staging.ki-ana.at

# Frontend talks to backend
NEXT_PUBLIC_API_BASE=https://staging.ki-ana.at
NEXT_PUBLIC_ENV=staging

# Cookies must be secure in staging (TLS)
KIANA_COOKIE_INSECURE=0

# --- Database (dedicated!) ---
POSTGRES_USER=kiana_staging
POSTGRES_PASSWORD=change_me
POSTGRES_DB=kiana_staging

# App reads DATABASE_URL; compose expands using the POSTGRES_* vars
# (leave unset here unless you run locally without compose)
# DATABASE_URL=postgresql+psycopg2://kiana_staging:change_me@localhost:25432/kiana_staging

# --- Stripe (test mode only!) ---
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_TEAM=price_...

# --- Misc secrets ---
JWT_SECRET=change_me
EMERGENCY_OVERRIDE_SHA256=

# --- Optional providers ---
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL_DEFAULT=llama3

# --- MinIO (staging dedicated) ---
MINIO_ROOT_USER=minio_staging
MINIO_ROOT_PASSWORD=change_me
